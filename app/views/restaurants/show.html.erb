<h1 class= "m-5"><%= @restaurant.name %></h1>

<div class= "m-5">
  <%= link_to edit_restaurant_path(@restaurant.id) do %>
  <i>EDIT</i>
  <% end %>
</div>

<div class= "m-5">
  <p><%= @restaurant.address%></p>
  <p><%= @restaurant.phone_number%></p>
  <p><%= @restaurant.category%></p>
</div>

<div class= "m-5">
  <%= link_to "Delete",
    restaurant_path(@restaurant),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>

<div class= "m-5">
<%= link_to "Back to list", restaurants_path %>
</div>

<div class= "m-5">
  <div>
    <%= link_to new_restaurant_review_path(@restaurant) do %>
    <i>Add a review</i>
    <% end %>
  </div>
  <h2>Reviews</h2>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.rating %>‚≠ê
        <%= review.content %>
          <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
      </li>
    <% end %>
  </ul>
</div>
